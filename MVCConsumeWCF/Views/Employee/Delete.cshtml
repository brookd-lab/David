@using MVCConsumeWCF.EmployeeService

@{
    ViewData["Title"] = "Delete Employee";
}
<div>
    <h4>Delete Employee</h4>
    <hr />
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Delete">
            <input type="hidden" name="Id" value="@Model.id" />
            <div class="form-group mb-2">
                <label>Name</label>
                <input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.name" required>
            </div>
            <div class="form-group mb-5">
                <label>Salary</label>
                <input type="text" class="form-control" name="Salary" placeholder="Salary" value="@Model.salary" required>
            </div>
            <button class="btn btn-success" type="submit">Delete Employee</button>
            <a class="btn btn-info" href='@Url.Action("Index", "Employee")'>Back to List</a>
        </form>
    </div>
</div>